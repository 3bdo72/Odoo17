<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View action View Tree -->
    <record id="view_action_tree" model="ir.ui.view">
        <field name="name">view.action.tree</field>
        <field name="model">action</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="author"/>
                <field name="category"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- View action form -->
    <record id="view_action_form" model="ir.ui.view">
        <field name="name">view.action.form</field>
        <field name="model">action</field>
        <field name="arch" type="xml">
            <form string="Action">
                <sheet>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group string="Main Information">
                        <field name="name"/>
                        <field name="author"/>
                        <field name="category"/>
                    </group>
                    <group string="Transaction Information">
                        <field name="amount"/>
                        <field name="currency"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View action search -->
    <record id="view_action_search" model="ir.ui.view">
        <field name="name">view.action.search</field>
        <field name="model">action</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
